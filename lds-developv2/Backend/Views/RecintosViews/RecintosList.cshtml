@model List<RecintoDesportivo>
@{
    ViewData["Title"] = "RecintosList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@foreach (RecintoDesportivo recinto in Model)
{
    <div class="album py-5 bg-body-tertiary" >
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3">

      <div class="col">
        <div class="card shadow-sm">
          <svg class="bd-placeholder-img card-img-top" style="background-image: url('~/@recinto.imagem')" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title></svg>
          <div class="card-body">
            <p class="card-text">Nome: @recinto.name</p>
            <p class="card-text">ID: @recinto.recintoID</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <form method="get" asp-controller="RecintosViews" asp-action="RecintoEdit" asp-route-id="@recinto.recintoID">
                    <button type="submit" class="btn btn-sm btn-outline-secondary" style="float:right;">Edit</button>
                </form>
                <form method="get" asp-controller="RecintosViews" asp-action="RecintoDelete" asp-route-id="@recinto.recintoID">
                    <button type="submit" class="btn btn-sm btn-outline-secondary" style="float:right;">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
}



